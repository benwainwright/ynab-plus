{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@ynab": ["./src/ynab/index.ts"],
      "@errors": ["./src/errors/index.ts"]
    }
  },
  "references": [
    {
      "path": "../domain"
    },
    {
      "path": "../application"
    },
    {
      "path": "../bootstrap"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
