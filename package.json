    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8",
    "ws": "^8.18.3"
  },
  "peerDependencies": {
    "typescript": "^5"
